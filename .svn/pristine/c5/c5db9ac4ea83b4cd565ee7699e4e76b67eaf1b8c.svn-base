
	Function FileExists(FilePath As String) As Boolean
		Dim TestStr As String
		TestStr = ""
		On Error Resume Next
		TestStr = Dir(FilePath)
		On Error GoTo 0
		If TestStr = "" Then
			FileExists = False
		Else
			FileExists = True
		End If
	End Function

	Public Function WriteContentInFile(FilePath As String, Content As String)
