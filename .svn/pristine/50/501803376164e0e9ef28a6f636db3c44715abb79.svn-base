<UserControl x:Class="PcVueSpyWPF.SwitchOnOff"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PcVueSpyWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Viewbox>
        <Grid>
            <Rectangle x:Name="Switch" StrokeThickness="5" Stroke="{StaticResource AbsoluteBlackBrush}"  Fill="{StaticResource ForegroundMainBrush}" Height="75" Width="150" RadiusX="35" RadiusY="35" MouseLeftButtonDown="ChangedCheckedState"/>
            <Ellipse x:Name="Dot" StrokeThickness="5" Stroke="{StaticResource AbsoluteBlackBrush}" Fill="{StaticResource ForegroundLightBrush}" Height="50" Width="50" Margin="0,0,75,0" MouseLeftButtonDown="ChangedCheckedState"/>
        </Grid>
    </Viewbox>
</UserControl>
